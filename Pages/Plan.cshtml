@page
@model CaminaDog.Pages.PlanModel
@{
    ViewData["Title"] = "Tu Plan de Paseo";
}

<div class="plan-container">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Plan de Paseo para @Model.StrategyPlan.DogName</h1>
        <p class="lead text-muted">Tu estrategia personalizada para paseos tranquilos.</p>
    </div>

    <!-- Analysis Summary -->
    <div class="card border-0 shadow-sm mb-5">
        <div class="card-body p-4 text-center">
            <h2 class="h4 text-primary mb-3">Análisis</h2>
            <p class="card-text fs-5">@Model.StrategyPlan.AnalysisSummary</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Routine -->
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header border-0 pt-4 px-4">
                    <h3 class="h4 text-success"><i class="bi bi-clock-history me-2"></i>Rutina Diaria</h3>
                </div>
                <div class="card-body px-4 pb-4">
                    <ul class="list-group list-group-flush">
                        @foreach (var step in Model.StrategyPlan.RoutineSteps)
                        {
                            <li class="list-group-item border-0 ps-0"><i class="bi bi-check-circle-fill text-success me-2"></i>@step</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Corrections -->
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header border-0 pt-4 px-4">
                    <h3 class="h4 text-warning"><i class="bi bi-exclamation-triangle me-2"></i>Técnicas de Corrección</h3>
                </div>
                <div class="card-body px-4 pb-4">
                    <ul class="list-group list-group-flush">
                        @foreach (var tech in Model.StrategyPlan.CorrectionTechniques)
                        {
                            <li class="list-group-item border-0 ps-0"><i class="bi bi-shield-check text-warning me-2"></i>@tech</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Daily Checklist -->
    <div class="checklist-card card border-0 shadow-lg mt-5">
        <div class="card-body p-5">
            <div class="d-flex align-items-center mb-4">
                <div class="checklist-icon me-3">
                    <i class="bi bi-list-check"></i>
                </div>
                <h3 class="h3 mb-0 fw-bold text-white">Checklist Antes de Salir</h3>
            </div>
            <div class="checklist-content">
                <pre class="text-white bg-transparent border-0 mb-0" style="font-family: 'Inter', system-ui, sans-serif; font-size: 1rem; line-height: 1.8; white-space: pre-wrap;">@Model.StrategyPlan.DailyChecklist</pre>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-page="/Index" class="btn btn-outline-secondary">Volver al Inicio</a>
        <button onclick="window.print()" class="btn btn-primary ms-2"><i class="bi bi-printer me-2"></i>Imprimir Plan</button>
    </div>
</div>
